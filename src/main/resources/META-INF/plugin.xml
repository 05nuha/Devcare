<idea-plugin>
    <id>com.devcare.plugin</id>
    <name>DevCare</name>
    <vendor email="support@devcare.com" url="https://github.com/yourteam">Your Team</vendor>

    <description><![CDATA[
    DevCare - Real-time health monitoring for developers.
    Tracks posture, typing patterns, and break reminders.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="DevCare"
                anchor="right"
                factoryClass="com.github.nuha.devcare.toolWindow.DevCareToolWindowFactory"
                icon="/icons/devcare.svg"/>
    </extensions>
</idea-plugin>